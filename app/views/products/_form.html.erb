<%= form_with(model: product, data: { turbo_frame: 'modal' }, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul class="list-disc ml-6">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w-full">

      <div class="my-2">
        <%= form.label :name %>
        <%= form.text_field :name, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-1 mt-1 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:name].none?, "border-red-400 focus:outline-red-600": product.errors[:name].any?}] %>
      </div>

      <div class="my-2">
        <%= form.label :price %>
        <%= form.text_field :price, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-1 mt-1 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:price].none?, "border-red-400 focus:outline-red-600": product.errors[:price].any?}] %>
      </div>

      <div class="my-2">
        <%= form.label :quantity %>
        <%= form.number_field :quantity, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-1 mt-1 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:quantity].none?, "border-red-400 focus:outline-red-600": product.errors[:quantity].any?}] %>
      </div>


    <div class="my-2">
      <%= form.label :description %>
      <%= form.text_area :description, rows: 2, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-1 mt-1 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:description].none?, "border-red-400 focus:outline-red-600": product.errors[:description].any?}] %>
    </div>
    <%= form.file_field :avatar %>

    <div>
      <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>

  </div>
<% end %>
